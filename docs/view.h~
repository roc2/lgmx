class view

{
    view *parent;

    src_container *src;

    layout

    view_manager* view_a;
    view_manager* view_b;

    QSplitter *splitter;

    bool splitted;
    bool is_root;


};

{
    a = new view(this, src);
    b = new view(this, src);

    splitter.add(a);
    splitter.add(b);

    set_layout(splitter);
}
